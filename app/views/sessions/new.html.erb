<%= form_tag '/login' do %>
 <div >
    <form >
      <div class="input-group">
        <span class="input-group-addon login-form">Username: </span>
        <%= text_field_tag :username %>
      </div>
      <div class="input-group">
        <span class="input-group-addon login-form">Password: </span>
        <%= password_field_tag :password %>
      </div>
      <div class="input-group">
          <%= submit_tag "Login" %>
      </div>
    </form>
  </div>
<% end %>
